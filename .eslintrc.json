{
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "settings": {
    "react": {
      "version": "16.7.0-alpha.0"
    }
  },
  "plugins": ["react", "react-hooks"],
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_$" }],
    "react/prop-types": "off",
    "react-hooks/rules-of-hooks": "error"
  }
}
